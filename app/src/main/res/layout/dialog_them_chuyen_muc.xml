<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:minWidth="400dp"
    android:minHeight="500dp">
    <TextView
        android:layout_margin="20dp"
        android:textColor="#059386"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Thêm chuyên mục"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_tencm"
        android:textSize="30dp"
        android:hint="Tên chuyên mục"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_hinhcm"
        android:textSize="30dp"
        android:hint="Hình chuyên mục"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/edit_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_linkcm"
        android:textSize="30dp"
        android:hint="Link"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnthem"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_button"
            android:text="Thêm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnhuythem"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:text="Huỷ"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>