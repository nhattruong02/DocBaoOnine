<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp">
    <TextView
        android:layout_margin="20dp"
        android:textColor="#059386"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Đăng ký"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_tkdk"
        android:textSize="30dp"
        android:hint="Tài khoản"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_mkdk"
        android:textSize="30dp"
        android:hint="Mật khẩu"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/edit_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_htdk"
        android:textSize="30dp"
        android:hint="Họ tên"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/edit_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_gtdk"
        android:textSize="30dp"
        android:hint="Giới tính"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/edit_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_nsdk"
        android:textSize="30dp"
        android:hint="Ngày sinh"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
    <EditText
        android:background="@drawable/edit_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_sdtdk"
        android:textSize="30dp"
        android:hint="Số điện thoại"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btndangkytk"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@drawable/custom_button"
            android:text="Đăng ký"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnthoatdk"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:text="Thoát"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>